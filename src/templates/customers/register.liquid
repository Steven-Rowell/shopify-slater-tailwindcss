<div class='account-register w-full h-full account-wrapper flex items-center justify-center'>
  <div class='w-full px-4'>
    <div class='account-dialog p-4 m-auto'>
      <h1 class='serif'>{{ 'customer.register.title' | t }}</h1>

      {% form 'create_customer' %}
        {{ form.errors | default_errors }}

        {%
          include 'component-input' with
          placeholder: 'First Name',
          name: 'customer[first_name]',
          value: form.first_name,
          type: 'text',
          className: 'mb-4'
        %}
        {%
          include 'component-input' with
          placeholder: 'Last Name',
          name: 'customer[last_name]',
          type: 'text',
          className: 'mb-4'
        %}
        {%
          include 'component-input' with
          placeholder: 'Email',
          name: 'customer[email]',
          type: 'email',
          value: form.email,
          spellcheck: "off",
          autocapitalize: "off",
          className: 'mb-4'
        %}

        {%
          include 'component-input' with
          placeholder: 'Password',
          name: 'customer[password]',
          type: 'password',
          className: 'mb-4'
        %}

        <div class='mt-4'>
          <div class='mt-4'>
            {%
            include 'component-button' with
            tag: 'button',
            type: 'submit',
            cta: 'Sign Up',
            className: 'btn'
            %}
          </div>
        </div>
        <div class='pt-4 flex items-center justify-center'>
          <div>
            <a href="{{ shop.url }}" class="mt-4 underline no-ajax">{{ 'customer.register.cancel' | t }}</a><br />
            Already have an account? <a class='mt-4 underline no-ajax' href='/account/login'>Login</a>
          </div>
        </div>
      {% endform %}
    </div>
  </div>
</div>
